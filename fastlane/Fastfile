default_platform(:ios)

platform :ios do
  desc "Push a new build to TestFlight"
  lane :beta do
    # Increment build number
    increment_build_number(xcodeproj: "Remember.xcodeproj")

    # Build and upload
    build_app(
      scheme: "Remember",
      destination: "generic/platform=iOS",
      archive_path: "build/Remember.xcarchive",
      output_directory: "build/export",
      export_options: {
        method: "app-store",
        signingStyle: "automatic"
      }
    )

    upload_to_testflight(
      api_key_path: "#{ENV['HOME']}/.appstoreconnect/api_key.json",
      distribute_external: false,
      changelog: "Bug fixes and improvements"
    )

    # Commit version bump
    commit_version_bump(
      xcodeproj: "Remember.xcodeproj",
      message: "Bump build number [skip ci]"
    )

    push_to_git_remote
  end

  desc "List TestFlight builds"
  lane :builds do
    api_key = app_store_connect_api_key(
      key_id: "XKU8846XS8",
      issuer_id: "e0939399-8b49-4818-b044-e769c1fbff8e",
      key_filepath: "#{ENV['HOME']}/.appstoreconnect/private_keys/AuthKey_XKU8846XS8.p8"
    )

    builds = latest_testflight_build_number(
      api_key: api_key,
      app_identifier: "com.gaugesgreen.remember"
    )

    UI.success("Latest TestFlight build: #{builds}")
  end
end
